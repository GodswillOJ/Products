        <div class="table-responsive">
            <% if(data.length == 0) {%>
            <h2>No item found</h2>
            <%} else { %>
                <h2>Posts Details</h2>

                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Details</th>
                        <td scope="col"><b>Remove</b></td>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < data.length; i++) {
                        %>
                      <tr>
                            <th scope="row"><%= i %></th>
                            <td><img src="/public/images/<%= data[i].image %>" alt=""></td>
                            <td><%= data[i].title %></td>
                            <td><%= data[i].details %></td>
                            <td>
                                <form action='/seller/remove-post' method="post">
                                    <input type="hidden" name="postId" value="<%= data[i]._id %>">
                                    <button class="btn btn-primary" type="submit">Remove</button>
                                </form>
                            </td>
                      </tr>
                      <% } %>

                    </tbody>
                    
                  </table>
                  <form action='/seller/delete-post/' method="post">
                                    <button class="btn btn-danger" type="submit">Clear All Post</button>
                    </form>
                <%
                }
