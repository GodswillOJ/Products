        <section id="menu" style="z-index: 1;">
            <div class="logo">
                <h4><a href="/seller/home">Ecommerce</a></h4> 
            </div>
            <div class="items">
                <a id="nav_link" href="/seller/dashboard"><li><div class="menu_icon"><i class="fa-solid fa-chart-pie"></i><p id="post_menu">Dashboard</p></div></li></a>
                <a id="nav_link" href="/seller/profile"><li><div class="menu_icon"><i class="fa-solid fa-circle-check"></i><p id="post_menu" href="#">Profile</p></div></li></a>
                <li><div class="menu_icon"><i class="fa-solid fa-feather" style="font-style: normal; font-size: 16px;"></i> <p class="post_menu" style="color: rgb(102, 110, 14)">Post</p></div>
                    <ul class='dropdown' id="drop_down_post">
                        <a id="nav_link item_post" href="/seller/post"><li>Add New</li></a>
                        <a href="/seller/all-post"><li>All Post</li></a>
                        <a href="/seller/users"><li>users</li></a>
                        <a href="#"><li>Tags</li></a>
                    </ul>
                </li>
                <a id="nav_link" href="/seller/edit-admin/:id"><li><div class="menu_icon"><i class="fa-solid fa-feather"></i><p id="post_menu" href="#">Edit</p></div></li></a>
                <a id="nav_link" href="/seller/inbox"><li><div class="menu_icon"><i class="fa-solid fa-envelope"></i><p id="post_menu" href="#">Inbox</p></div></li></a>
