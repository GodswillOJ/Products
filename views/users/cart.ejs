        <div class="table-responsive" style="margin: 0 10rem 0 10rem;">
            <% if(cart.items.length == 0) {%>
            <h2>No item found</h2>
            <%} else { %>
                <h2>Product Details</h2>

                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <td scope="col"><b>Remove</b></td>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < cart.items.length; i++) {
                                let item = cart.items[i]
                        %>
                      <tr>
                            <th scope="row"><%= i %></th>
                            <td><%= item.name %></td>
                            <td><%= item.price %></td>
                            <td><%= item.quantity %></td>
                            <td>
                                <form action='/user/delete-cart' method="post">
                                    <input type="hidden" name="productId" value="<%= item._id %>">

                                    <input type="hidden" name="quantity" value="<%= item.quantity %>">
                                    <input type="hidden" name="price" value="<%= item.price %>">
                                    <button class="btn btn-primary" type="submit">Remove</button>
                                </form>
                            </td>
                      </tr>
                      <% } %>
                      <tr>
                        <td>Total Price:</td>
                        <td colspan="3"><%= cart.totalPrice %></td>
                      </tr>
                      <tr>
                        <td>
                            <a href="/user/delete_cart/<%= cart._id %>" type="button" class="btn btn-danger btn-small" >
                                <i class="bi bi-pencil">Clear</i>
                            </a>
                        </td>
                      </tr>
                    </tbody>
                  </table>

