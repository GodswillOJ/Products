              <div id="container">
                
                
                <form id="add_form" action="/user/edit" method="POST" enctype="multipart/form-data">
                    
                        <div class="user_msg">
                           
                        </div>

                        <input type="hidden" name="user_id" value="<%= user.id %>">
                    
                    <div class="row form-group mb-4">
                        <div class="col">
                            <label for="firstname">First Name</label>
                            <input type="text" class="form-control" id="username" name="firstname" placeholder="First Name" required="" value="<%= user.firstname %>">
    
                        </div>
    
                        <div class="col">
                            <label for="lastname">Last Name</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Last Name" required="" value="<%= user.lastname %>">
                            
                        </div>
    
                    </div>
    
    
                    <div class="row form-group mb-4">
                        <div class="col">
                            <label for="mno">Tel</label>
                            <input type="text" class="form-control" id="tel" name="mno" placeholder="Telephone" required="" value="<%= user.mno %>">
                            
                        </div>
    
                        <div class="col">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter new password" required="">
                            
                        </div>
                    </div>
    
                    <div class="row form-group mb-4">
                        <div class="col">
    
                            <div class="col">
                                <label for="username">Username</label>
                                <input type="text" class="form-control" placeholder="Username" name="username" required="" value="<%= user.username %>">
                                
                            </div>
                        </div>
                        
                        <div class="col">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" placeholder="Email" name="email" required="" value="<%= user.email %>">
                            
                        </div>
                    </div>
    
                    <div class="col">
                            <label for="details" id="form_text"><b>User Details:</b></label>
                            <textarea class="form-contol" name="details" id="details" cols="30" rows="12" placeholder="Customer details"><%= user.details %></textarea>
                            
                    </div>
    
                    <div class="form-group mb-4">
                        <label for="image">Upload Image</label>
                        <input id="image" name="image" type="file" required>
                        
                    </div>
    
                    <div class="form-group mb-4">
                            <button type="submit" class="btn btn-primary" value="Update Profile">Edit User</button>
                    </div>
              </form>
