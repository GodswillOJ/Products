         </section>
         <section id="interface" style="display: block; overflow: scroll;">
            <input type="checkbox" id="toggle">
            <div class="nav" style="z-index: 99;">
                <!-- For search bar -->
                <div class="n1">
                    <!-- for icon -->
                    <label class="nav-toggler" for="toggle">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </label>

                                    <!-- For search bar -->
                <div class="search_bar">
                    <i class="fa-solid fa-magnifying-glass" id="view"></i>
                    <i class="fa-sharp fa-solid fa-xmark" id="closeBtn"></i>
                </div>
                <input type="text" placeholder="New search here..." class="search_field">

                </div>
                <!--  For profile bar -->
                <div class="profile">
                    <i class="fa-solid fa-bell">

                    </i>
                    <img src="/public/images/bio.jpg" alt="">
                </div>
            </div>

            <div class="order_container" style="position: relative; top: 7rem;">
                <div class="order_sec">
                    <div class="order_info" style="margin: 0 10px 0 10px; display: grid; grid-template-columns: 1fr 1fr; gap:20px;">
                        <div class="info1">
                            <div><h5>Shipping Details</h5></div>
                        </div>

                        <div class="info1">
                            <div>
                                <h5>Review Order Information</h5>
                                <div class="table-responsive" style="margin: 0 1rem 0 1rem;">
                                    <% if(cart.items.length == 0) {%>
                                    <h2>No item found</h2>
                                    <%} else { %>
                        
                                          <table class="table">
                                            <thead>
                                              <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Title</th>
                                                <th scope="col">Image</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Quantity</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                                <% for(let i = 0; i < cart.items.length; i++) {
                                                        let item = cart.items[i]
                                                %>
                                              <tr>
                                                    <th scope="row"><%= i %></th>
                                                    <td><%= item.name %></td>
                                                    <td><%= item.image %></td>
                                                    <td><%= item.price %></td>
                                                    <td><%= item.quantity %></td>
                                              </tr>
                                              <% } %>
                                              <tr>
                                                <td>Total Price:</td>
                                                <td colspan="3"><%= cart.totalPrice %></td>
                                              </tr>
                                            </tbody>
                                          </table>
                        
                                        <%
                                        }
                                        %>
                                        <div class="promo_hold" style="background-color: rgb(200, 200, 197); display: flex;">
                                            <input type="text" name="promo" style="width: 100%; margin: 2px 0 2px 2px;">
                                            <label for="promo" style="width: 20%;">Apply</label>
                                        </div>
                                        <div class="comment_ordr">
                                            <label>You can leave us a comment</label>
                                            <textarea name="commentOrder" id="" cols="50" rows="1"></textarea>
                                        </div>
                                        <div class="checkBox_order">
                                            <label for="checkOrder">Accept the terms and condition</label>
                                            <input type="checkbox">
                                        </div>
                                        <div>
                                            <input type="submit" value="submit">
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            
         </section>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
