         <section id="interface" style="display: block; overflow-y: scroll;">
            <input type="checkbox" id="toggle">
            <div class="nav" style="z-index: 99;">
                <!-- For search bar -->
                <div class="n1">
                    <!-- for icon -->
                    <label class="nav-toggler" for="toggle">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </label>

                                    <!-- For search bar -->
                <div class="search_bar">
                    <i class="fa-solid fa-magnifying-glass" id="view"></i>
                    <i class="fa-sharp fa-solid fa-xmark" id="closeBtn"></i>
                </div>
                <input type="text" placeholder="New search here..." class="search_field">

                </div>
                <!--  For profile bar -->
                <div class="profile">
                    <i class="fa-solid fa-bell">

                    </i>
                    <img src="/public/images/bio.jpg" alt="">
                </div>
            </div>


            <!-- all order list -->

            <div class="order_list_board">

                        <div>
    
                            <div class="inbox-container">
                                <h1>Inbox</h1>
                                <div class="messages">
                                    <ul id="messages-list">
                                        <% messages.forEach((message, index) => { %>
                                          <li class="<%= message.isRead ? 'read' : 'unread' %>" onclick="toggleRead('<%= index %>')" onclick="markAsRead('<%= message._id %>')">
                                            <strong><%= message.sender %>:</strong>
                                            <em><%= message.subject %></em>
                                            <p><%= message.content %></p>
                                          </li>
                                        <% }); %>
                                      </ul>
                                </div>
                             </div>
                        </div>
                        <script>
                            function toggleRead(index) {
                              const messagesList = document.getElementById('messages-list');
                              const messageItem = messagesList.children[index];
                              messageItem.classList.toggle('read');
                            }
                          </script>
                 
            </div>
            
         </section>
