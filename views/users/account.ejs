        <section id="menu" style="z-index: 1;">
            <div class="logo">
                <h4><a href="/admin/home">Ecommerce</a></h4> 
            </div>
            <div class="items">
                <a id="nav_link" href="/user/account"><li><div class="menu_icon"><i class="fa-solid fa-circle-check"></i><p id="post_menu" href="#">profile</p></div></li></a>
                <a id="nav_link" href="/user/mycart"><li><div class="menu_icon"><i class="fa-solid fa-feather"></i><p id="post_menu" href="#">cart(<% if (typeof data.cart !== "undefined") { %> <%= data.cart.items.length %> <% } else { %> 0 <% } %>)</p></div></li></a>
                <a id="nav_link" href="/user/inbox"><li><div class="menu_icon"><i class="fa-solid fa-feather"></i><p id="post_menu" href="#">inbox</p></div></li></a>
                <a id="nav_link" href='/user/all_orders'><li><div class="menu_icon"><i class="fa-solid fa-list-ul"></i><p id="post_menu" href="#">orders</p></div></li></a>
                <a id="nav_link" href="/user/saved"><li><div class="menu_icon"><i class="fa-solid fa-envelope"></i><p id="post_menu" href="#">saved</p></div></li></a>
                <a id="nav_link" href="/user/settings"><li><div class="menu_icon"><i class="fa-solid fa-envelope"></i><p id="post_menu" href="#">settings</p></div></li></a>
                <a id="nav_link" href="/user/edit/:id"><li><div class="menu_icon"><i class="fa-solid fa-feather"></i><p id="post_menu" href="#">edit</p></div></li></a>
                <a id="nav_link"href="/logout"><li><div class="menu_icon"> <i class="fa-solid fa-gear"></i><p id="post_menu" href="#">logout</p></div></li></a>
            </div>
         </section>
         <section id="interface" style="display: block; overflow: scroll;">
            <input type="checkbox" id="toggle">
            <div class="nav" style="z-index: 99;">
                <!-- For search bar -->
                <div class="n1">
                    <!-- for icon -->
                    <label class="nav-toggler" for="toggle">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </label>

                                    <!-- For search bar -->
                <div class="search_bar">
                    <i class="fa-solid fa-magnifying-glass" id="view"></i>
                    <i class="fa-sharp fa-solid fa-xmark" id="closeBtn"></i>
                </div>
                <input type="text" placeholder="New search here..." class="search_field">

                </div>
                <!--  For profile bar -->
                <div class="profile">
                    <i class="fa-solid fa-bell">

                    </i>
                    <img src="/public/images/bio.jpg" alt="">
                </div>
            </div>
            <div class="User_values" style="display: block;">
                <div class="user_info flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom" style="display: block;">
                    <div>
                    <% if(data.is_verified == 1) %><p class="user_name"><p style="color: green;">verified <i class="fa-solid fa-check" style="color:rgb(62, 205, 9);"></i></p></p>
                

                    </div>
                    <i class="bi bi-patch-check-fill"></i>
                    <div class="btn-toolbar mb-2 mb-md 0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                share
                            </button>

                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                export
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col py-3">
                    <div class="row">
                        <div class="col">
                            <div class="userNav" aria-label="breadcrumb">
                                <ol>
                                    <li class="breadcrumb-item"><a href="/user/home">Home</a></li>
                                    <li class="breadcrumb-item"><%= data.username %></li> 
                                </ol>
                            </div>
                        </div>

                        <div class="col text-end fu-lighter" style="padding-top: 50px; padding-right: 30px;">
                            <b>Last Updated</b>
                        </div>
                    </div>
                </div>
                
                <ul class="list-group" >
                    <li class="list-group-item">
                        <div class="col" style="max-width: 140px;">
                            <b>Name:</b>
                        </div>
                        <div class="col">
                            <%= data.firstname  %> <%= data.lastname %>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="col" style="max-width: 140px;">
                            <b>Email:</b>
                        </div>
                        <div class="col">
                            <%= data.email  %>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="col" style="max-width: 140px;">
                            <b>Telephone:</b>
                        </div>
                        <div class="col">
                            <%= data.mno  %>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="col" style="max-width: 140px;">
                            <b>Password:</b>
                        </div>
                        <div class="col">
                            <%= data.password  %>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="col" style="max-width: 140px;">
                            <b>Image:</b>
                        </div>
                        <div class="col">
                            <img src="/public/images/<%= data.image  %>" style="width: 10%; height: 10%; " alt="">
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="col" style="max-width: 140px;">
                            <b>Customer Details:</b>
                        </div>
                        <textarea class="col" style="width: 90%;"><%= data.details  %>
                        </textarea>
                    </li>
                </ul>
            </div>
            
         </section>
