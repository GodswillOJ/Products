  <% if (typeof message !== 'undefined') { %>
    <div class="user_msg" style="background-color: rgb(214, 249, 161); padding-left: 20px; margin: 0 10px 0 10px;">
        <%= message %>
     </div>
     <% } %>

  <!-- users sec -->
<form id="add_form" action="/admin/add-message" method="POST" enctype="multipart/form-data">
    <div>
        <div class="row post_details">
            <label for="sender">Admin</label>
            <input type="text" class="form-control" placeholder="admin" name="sender" required>
        </div>
        <div class="row post_details">
            <label for="title">message title</label>
            <input type="text" class="form-control" placeholder="Title" name="title" required>
        </div>
        <div class="row post_details">
            <label for="category" name="receiver">To</label>

            <select class="form-select" name="receiver" aria-label="Default select example" name="category">
                <option class="all">General</option>
                <option value="user">Users</option>
                <option value="seller">Sellers</option>
            </select>
        </div>

    <!-- customer details  -->
    <div class="row ">
            <p style="padding-top: 30px;">message details</p>
            <textarea class="content" name="content" id="details" cols="30" rows="10"  placeholder="Post details"></textarea>
    </div>

    <!-- <div class="row">
        <label for="image">Upload Image</label>
        <input id="image" name="image" type="file">
            
    </div> -->

    <div>
            <button type="submit" class="btn btn-primary">Add New</button>
    </div>
 </form>