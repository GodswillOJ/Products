            <form id="add_form" action="/admin/post" method="POST" enctype="multipart/form-data">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 60px;">
                    <div class="row post_details">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" placeholder="Title" name="title" required>
                    </div>
                    <div class="row post_details">
                        <label for="richDescription">Post Description</label>
                        <input type="text" class="form-control" placeholder="Information" name="richDescription" required>
                    </div>
                    <div class="row post_details">
                        <label for="category" name="category">Select Category</label>
                        <select class="form-select" aria-label="Default select example" name="category">
                            <option value="">Select Category</option>

                                <% categories.forEach(category => { %>
                                     <option value="<%= category.id %>"><%= category.name %></option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="row post_details">
                        <label for="category" name="category">Select Place</label>

                        <select class="form-select" aria-label="Default select example" name="category">
                            <option class="select1">Location</option>
                            <option value="1">Rivers</option>
                            <option value="2">Lagos</option>
                            <option value="3">Abuja</option>
                            <option value="3">Calabar</option>
                            <option value="3">Delta</option>
                        </select>
                    </div>
                    <div class="row post_details">
                        <label for="price" name="">Price</label>
                        <input type="text" name="price" class="form-control" placeholder="Enter product price">
                    </div>

